{
  "manifest_version": 3,
  "name": "Focus",
  "version": "1.0",
  "description": "A little help to stay focused on your dreams.",
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*", "*://*.facebook.com/*"],
      "js": ["content.js", "jquery.min.js"],
      "css": ["styles.css"]
    }
  ],
  "permissions": ["activeTab", "tabs", "https://source.unsplash.com/*"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
